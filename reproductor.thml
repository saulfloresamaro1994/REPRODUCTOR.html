<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Panel de Registro y Reproductor</title>
    <style>
        body {
            margin: 0;
            padding: 0;
            display: flex;
            justify-content: center;
            align-items: center;
            height: 100vh;
            background-color: black;
            font-family: Arial, sans-serif;
            color: white;
        }

        .glass-container {
            background: rgba(0, 255, 0, 0.1);
            backdrop-filter: blur(10px);
            border-radius: 15px;
            padding: 20px;
            box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
            width: 300px;
            text-align: center;
        }

        .glass-container h2 {
            margin-bottom: 20px;
        }

        .glass-container label {
            display: block;
            margin-bottom: 5px;
        }

        .glass-container input {
            width: 100%;
            padding: 10px;
            margin-bottom: 15px;
            border: none;
            border-radius: 5px;
            background: rgba(255, 255, 255, 0.1);
            color: white;
        }

        .glass-container button {
            width: 100%;
            padding: 10px;
            border: none;
            border-radius: 5px;
            background: rgba(0, 255, 0, 0.3);
            color: white;
            cursor: pointer;
        }

        .glass-container button:hover {
            background: rgba(0, 255, 0, 0.5);
        }

        .hidden {
            display: none;
        }

        #playerContainer {
            margin-top: 20px;
        }

        #videoPlayer {
            width: 100%;
            max-width: 600px;
            height: auto;
        }
    </style>
</head>
<body>
    <div class="glass-container">
        <h2>Iniciar Sesión</h2>
        <form id="loginForm">
            <label for="username">Nombre de acceso:</label>
            <input type="text" id="username" name="username" required>
            
            <label for="password">Contraseña:</label>
            <input type="password" id="password" name="password" required>
            
            <button type="submit">Ingresar</button>
        </form>
    </div>

    <div id="playerContainer" class="hidden">
        <h2>plantón, la película 2025</h2>
        <video id="videoPlayer" controls>
            <source src="" type="application/x-mpegURL">
            Tu navegador no soporta la reproducción de video.
        </video>
    </div>

    <script>
        document.getElementById('loginForm').addEventListener('submit', function(event) {
            event.preventDefault();

            const username = document.getElementById('username').value;
            const password = document.getElementById('password').value;

            if (username === 'Srtelmex' && password === '1234') {
                document.querySelector('.glass-container').classList.add('hidden');
                document.getElementById('playerContainer').classList.remove('hidden');

                const videoPlayer = document.getElementById('videoPlayer');
                videoPlayer.src = 'https://qdihmnfwepxni.acek-cdn.com/hls2/01/04059/l0bdiu2naizg_l/master.m3u8?t=JDjGcyUdA3pqby8nX79932is5RU9gggZXQwNRpaDNc0&s=1741982835&e=129600&f=20299406&srv=yCdcGNsOcuCU&i=0.4&sp=500&p1=yCdcGNsOcuCU&p2=yCdcGNsOcuCU&asn=8151'; // Enlace M3U8 de prueba
                videoPlayer.load();
                videoPlayer.play();
            } else {
                alert('Nombre de acceso o contraseña incorrectos');
            }
        });
    </script>
</body>
</html>
